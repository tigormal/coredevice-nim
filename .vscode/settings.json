{
    
    "nim.autoRestart": true,
    "nim.autoCheckProject": true,
    "nim.autoCheckFile": true,
    "nim.provider": "nimsuggest",
    "nim.project": [
        "src/coredevice.nim",
        "src/discovery/service.nim",
        "src/coredevicepkg/protocol.nim",
        "src/coredevicepkg/util.nim"
    ],
    "nim.projectMapping": {
    
        // open files under tests using one nimsuggest instance started with root = test/all.nim
        "projectFile": "src/coredevice.nim",
        "fileRegex": "src/.*\\.nim"
    },
    "nim.runOutputDirectory": "bin",
    "nim.test-project": "tests/all.nim",
    "nim.useNimsuggestCheck": true,
}